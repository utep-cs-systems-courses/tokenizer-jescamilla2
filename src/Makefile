# for convenience, define variable $(OBJS) to list of object files
OBJS = tokenizer.o history.o main.o

# make has a "default rule" specifying how to build an "object" file (.o) from a C source file (.c)
# this rule includes $(CFLAGS) as one of cc's paramaters

CFLAGS = -g # -g for debug, -03 for optimization

# first target is built by default
all: output_file

# asciidraw (target) depends on all object files (prerequisites)
output_file: $(OBJS)
	cc -o output_file $(CFLAGS) $(OBJS)

# all object files built from c files
$(OBJS): tokenizer.h history.h

# deletes files generated by compilation
clean:
	rm -f *.o *~ output_file

run: output_file
	./output_file
